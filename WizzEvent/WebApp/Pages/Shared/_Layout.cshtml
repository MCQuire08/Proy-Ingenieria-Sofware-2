<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/controlactions.js"></script>
    <script src="https://kit.fontawesome.com/c1fbdc5809.js" crossorigin="anonymous"></script>
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.5/datatables.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.5/datatables.min.js"></script>
    <script src="~/js/layout.js"></script>
</head>
<body>
    
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">WizzEvent</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-page="/Index">
                                Inicio
                            </a>
                        </li>

                        <li class="nav-item opciones" data-rol="Cliente General">
                            <a class="nav-link" asp-area="" asp-page="">Perfil</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Cliente General">
                            <a class="nav-link" asp-area="" asp-page="">Extra</a>
                        </li>

                        <li class="nav-item opciones" data-rol="Gestor de Eventos">
                            <a class="nav-link" asp-area="" asp-page="">Crear evento</a>
                        </li>

                        <li class="nav-item opciones" data-rol="Gestor de Eventos">
                            <a class="nav-link" asp-area="" asp-page="/perfil">Perfil</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Administrador">
                            <a class="nav-link" asp-area="" asp-page="/Admin/adminmembresiascrud">Membresias</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Administrador">
                            <a class="nav-link" asp-area="" asp-page="/Admin/adminlogs">Dashboard</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Administrador">
                            <a class="nav-link" asp-area="" asp-page="/Admin/adminusercrud">Usuarios</a>
                        </li>
                        <li class="nav-item opciones" data-rol="Administrador">
                            <a class="nav-link" asp-area="" asp-page="/Admin/admineventscrud">Eventos</a>
                        </li>


                    </ul>
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="btn btn-danger m-2" asp-area="" asp-page="" id="btnSingOut">Cerrar Sesion</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-warning" style="margin-top:7%" asp-page="/createuserge">Vuelvete un vendedor</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-secondary m-2 btn-lg" asp-area="" asp-page="/loginuser" id="btnLogin">Iniciar Sesion</a>
                        </li>
                        
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

  
</body>
</html>