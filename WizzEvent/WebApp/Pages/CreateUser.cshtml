@page
@model WebApp.Pages.CreateUserModel
@{
}

<head>
    <title>Registro de Usuarios - Información General</title>
    <link rel="stylesheet" type="text/css" href="~/css/CreateUserStyles.css">
    <script src="~/js/UbicationUser.js"></script>
    <script src="~/js/CreateUser.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDhFSvGQa0QBc0LcYRf88spbk3vxuSZHvw&callback=initMap" async defer></script>

    
</head>
<body>
    <div class="form">
        <h2>Registro de Usuario</h2>
    </div>

    <div class="form-container">
        <h2>Información General</h2>
        <form>
            <div class="form-row">
                <div class="form-column">
                    <label for="nombre">Nombre:</label>
                    <input type="text" id="nombre" name="nombre">
                </div>
                <div class="form-column">
                    <label for="apellidos">Apellidos:</label>
                    <input type="text" id="apellidos" name="apellidos">
                </div>
                <div class="form-column">
                    <label for="tipoIdentificacion">Tipo de Identificación:</label>
                    <select id="tipoIdentificacion" name="tipoIdentificacion">
                        <option value="nacional">Nacional</option>
                        <option value="extranjero">Extranjero</option>
                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-column">
                    <label for="numeroIdentificacion">Número de Identificación:</label>
                    <input type="text" id="numeroIdentificacion" name="numeroIdentificacion">
                    
                </div>
                <div class="form-column">
                    <label for="email">E-mail:</label>
                    <input type="email" id="email" name="email">
                    
                </div>
                <div class="form-column">
                    <label for="telefono">Teléfono:</label>
                    <input type="text" id="telefono" name="telefono">
                   
                </div>
            </div>

            <div class="form-row">
                <div class="form-column">
                    <label for="cedulaImagen">Cargar Imagen de Cédula:</label>
                    <div id="container-images-names">
                    </div>
                    <button class="btn btn-info" type="button" id="btnLoadImages">Subir</button>
                </div>
                <div class="form-column">
                    <label for="password">Contraseña:</label>
                    <input type="password" id="password" name="password">
                </div>
                <div class="form-column">
                    <label for="confirmPassword">Confirmar Contraseña:</label>
                    <input type="password" id="confirmPassword" name="confirmPassword">
                </div>
            </div>

            <div class="content">
                <div id="map" style="height: 400px;"></div>
                <input class="form-control" id="address" type="text"  readonly="" >
            </div>
            
            <button type="button" class="next-button" id="btn-siguiente" onclick="validarFormulario()">Registrarse</button>
        </form>
    </div>
</body>
